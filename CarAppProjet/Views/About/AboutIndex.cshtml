@using CarAppProjet.Models.Classes
@model List<About>
@{
    ViewBag.Title = "AboutIndex";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!-- ***** Header Area End ***** -->
@foreach (var x in Model)
{
    <section class="section section-bg" id="call-to-action" style="background-image: url(assets/images/banner-image-1-1920x500.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <br>
                        <br>
                        <h2><em>Hakkımızda</em> Daha Fazlası</h2>
                        <p>@x.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ***** Our Classes Start ***** -->
    <section class="section" id="our-classes">
        <div class="container">
            <br>
            <br>
            <br>
            <div class="row" id="tabs">
                <div class="col-lg-4">
                    <ul>
                        <li><a href='#tabs-1'><i class="fa fa-soccer-ball-o"></i>Biz Kimiz</a></li>
                    </ul>
                </div>
                <div class="col-lg-8">
                    <section class='tabs-content'>
                        <article id='tabs-1'>

                            <img src="@x.FotoUrl" alt="">
                            <h4>Biz Kimiz</h4>

                            <p>@x.Description</p>


                        </article>
                    </section>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Our Classes End ***** -->
    <!-- ***** Call to Action Start ***** -->
    <section class="section section-bg" id="call-to-action" style="background-image: url(assets/images/banner-image-1-1920x500.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <h2>Send us a <em>message</em></h2>
                        <p>bişiler.</p>
                        <div class="main-button">
                            <a href="~/website/contact.html">Contact us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- ***** Call to Action End ***** -->
