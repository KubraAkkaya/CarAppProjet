@model CarAppProjet.Models.Classes.Car

@{
    ViewBag.Title = "GetApprove";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Araba Onayla</h2>
<br />
@using (Html.BeginForm("UpdateApprove", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Approve)
    <br />
    @Html.RadioButtonFor(x => x.Approve, true, new { @class = "form-check-input" })
    <label class="form-check-label">Onayla</label>
    <br />
    @Html.RadioButtonFor(x => x.Approve, false, new { @class = "form-check-input" })
    <label class="form-check-label">Onaylama</label>
    <button class="btn btn-primary" style="font-size:large">Güncelle</button>
    <br />
    <br />

}
